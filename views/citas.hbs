<table border="solid">
<h2>LISTADO DE CITAS</h2>
<thead>
<tr>
<th>Fecha</th>
<th>Paciente</th>
<th>Medico</th>
<th>Consultorio</th>
<th>Opciones</th>
</tr>
</thead>
<tbody>
{{#each citas}}
<form method="post" action="/citas/actualizar/{{id}}">
<tr>
<td><input id="fecha" name="fecha" value="{{formatoFecha fecha}}" {{../opcion}}></td>
<td><input id="paciente" name="paciente" value="{{nombre}}" {{../opcion}}></td>
<td><input id="medico" value="{{id}}" disabled></td>
<td><input id="consultorio" name="consultorio" value="{{consultorio}}" {{../opcion}}></td>
<td>

<a class="eliminar" href="citas/eliminar/{{id}}">Eliminar</a>

</td>
</tr>
</form>
{{/each}}
</tbody>
</table>
<a href="citas/agregar">Agregar citas</a>
<a href="/">Volver</a>
